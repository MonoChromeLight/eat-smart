<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/excluded_ingr_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/excluded_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Excluded"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btn_remove_excl_item"
            android:src="@drawable/ic_cancel_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/excluded_item_name"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="-4dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>